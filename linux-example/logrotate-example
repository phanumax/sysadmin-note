su root syslog

/var/log/fortimail.log
/var/log/hpe/storeonce.log
/var/log/synology.log
/var/log/vmware-esxi.log
/var/log/paloalto/firewall.log
{
    size 2048M
    rotate 4 # Keep 4 recent files
    missingok
    compress
    notifempty
    create 0644 syslog adm
    postrotate
        /usr/lib/rsyslog/rsyslog-rotate
    endscript
}